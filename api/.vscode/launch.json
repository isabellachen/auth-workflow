{
  "version": "0.2.0",
  "configurations": [
    {
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "name": "nodemon",
      "program": "${workspaceFolder}/src/index.js",
      "request": "launch",
      "restart": true,
      "runtimeExecutable": "node_modules/.bin/nodemon",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },

    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "restart": true,
      "processId": "${command:PickProcess}"
    }
  ]
}
